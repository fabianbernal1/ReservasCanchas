
@page "/Canchas"

<PageTitle>Canchas</PageTitle>

<h3>Gestión de Canchas</h3>

<!-- Botón para crear nueva cancha -->
<div class="mb-3">
    <button class="btn btn-primary">
        + Nueva Cancha
    </button>
</div>

<!-- Formulario (se puede mostrar/ocultar más adelante) -->
<div class="card p-3 mb-4">
    <h5>Nueva / Editar Cancha</h5>

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" placeholder="Nombre de la cancha" />
    </div>

    <div class="mb-3">
        <label class="form-label">Ubicación</label>
        <input type="text" class="form-control" placeholder="Ubicación" />
    </div>

    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <input type="text" class="form-control" placeholder="Ejemplo: Sintética, Natural..." />
    </div>

    <div class="mb-3">
        <label class="form-label">Precio por Hora</label>
        <input type="number" step="0.01" class="form-control" placeholder="0.00" />
    </div>

    <div>
        <button class="btn btn-success">Guardar</button>
        <button class="btn btn-secondary">Cancelar</button>
    </div>
</div>

<!-- Tabla para listar las canchas -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Ubicación</th>
            <th>Tipo</th>
            <th>Precio por Hora</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <!-- Aquí se iterarán las canchas más adelante -->
        <tr>
            <td>Cancha 1</td>
            <td>Ubicación X</td>
            <td>Sintética</td>
            <td>$50.000</td>
            <td>
                <button class="btn btn-warning btn-sm">Editar</button>
                <button class="btn btn-danger btn-sm">Eliminar</button>
            </td>
        </tr>
        <tr>
            <td>Cancha 2</td>
            <td>Ubicación Y</td>
            <td>Natural</td>
            <td>$40.000</td>
            <td>
                <button class="btn btn-warning btn-sm">Editar</button>
                <button class="btn btn-danger btn-sm">Eliminar</button>
            </td>
        </tr>
    </tbody>
</table>
