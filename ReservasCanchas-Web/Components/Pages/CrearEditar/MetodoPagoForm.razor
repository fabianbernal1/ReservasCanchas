@page "/metodos-pago/nuevo"
@page "/metodos-pago/editar/{Id:int}"
@using System.Net.Http.Json
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<div class="container-fluid px-4">
    <h3 class="mt-4">@((Id == 0) ? "Nuevo método de pago" : "Editar método de pago")</h3>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <EditForm Model="model" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Nombre método</label>
                    <InputText class="form-control" @bind-Value="model.NombreMetodo" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" @onclick="@(() => NavManager.NavigateTo("/metodos-pago"))">Cancelar</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private MetodoPago model = new MetodoPago();
    private string? errorMessage;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (Id != 0)
            {
                var existing = await Api.GetFromJsonAsync<MetodoPago>($"api/metodos-pago/{Id}");
                if (existing != null) model = existing;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error cargando método: {ex.Message}";
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            HttpResponseMessage resp;
            if (Id == 0)
                resp = await Api.PostAsJsonAsync("api/metodos-pago", model);
            else
                resp = await Api.PutAsJsonAsync($"api/metodos-pago/{Id}", model);

            if (resp.IsSuccessStatusCode)
            {
                NavManager.NavigateTo("/metodos-pago");
            }
            else
            {
                var detail = await resp.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Error guardando método: {resp.StatusCode} - {detail}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error guardando método: {ex.Message}");
        }
    }
}