@page "/usuarios/nuevo"
@page "/usuarios/editar/{Id:int}"
@using System.Net.Http.Json
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<div class="container-fluid px-4">
    <h3 class="mt-4">@((Id == 0) ? "Nuevo usuario" : "Editar usuario")</h3>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <EditForm Model="model" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <InputText class="form-control" @bind-Value="model.Nombre" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Primer apellido</label>
                    <InputText class="form-control" @bind-Value="model.PrimerApellido" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Segundo apellido</label>
                    <InputText class="form-control" @bind-Value="model.SegundoApellido" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Cédula</label>
                    <InputText class="form-control" @bind-Value="model.Cedula" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo</label>
                    <InputText class="form-control" @bind-Value="model.Correo" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Teléfono</label>
                    <InputText class="form-control" @bind-Value="model.Telefono" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha registro</label>
                    <InputDate class="form-control" @bind-Value="model.FechaRegistro" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" @onclick="@(() => NavManager.NavigateTo("/usuarios"))">Cancelar</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private Usuario model = new Usuario();
    private string? errorMessage;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (Id != 0)
            {
                var existing = await Api.GetFromJsonAsync<Usuario>($"api/usuarios/{Id}");
                if (existing != null) model = existing;
            }
            else
            {
                model.FechaRegistro = DateTime.Now;
            }
        }
        catch (Exception ex)
        {
            // Mostrar error en UI si falla la llamada a la API
            errorMessage = $"Error cargando usuario: {ex.Message}";
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            HttpResponseMessage resp;
            if (Id == 0)
                resp = await Api.PostAsJsonAsync("api/usuarios", model);
            else
                resp = await Api.PutAsJsonAsync($"api/usuarios/{Id}", model);

            if (resp.IsSuccessStatusCode)
            {
                NavManager.NavigateTo("/usuarios");
            }
            else
            {
                var detail = await resp.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Error guardando usuario: {resp.StatusCode} - {detail}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error guardando usuario: {ex.Message}");
        }
    }
}