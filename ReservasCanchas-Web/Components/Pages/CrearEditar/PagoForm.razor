@page "/pagos/nuevo"
@page "/pagos/editar/{Id:int}"
@using System.Net.Http.Json
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<div class="container-fluid px-4">
    <h3 class="mt-4">@((Id == 0) ? "Nuevo pago" : "Editar pago")</h3>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <EditForm Model="model" FormName="PagoForm" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Reserva</label>
                    <InputSelect class="form-select" @bind-Value="model.ReservaId">
                        <option value="0">-- Seleccione reserva --</option>
                        @foreach (var r in reservas)
                        {
                            <option value="@r.ReservaId">@($"{r.ReservaId} - {r.FechaReserva:dd/MM/yyyy} {r.HoraInicio.ToString(@"hh\:mm")}")</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => model.ReservaId)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Monto</label>
                    <InputNumber class="form-control" @bind-Value="model.Monto" step="0.01" />
                    <ValidationMessage For="@(() => model.Monto)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Método de pago</label>
                    <InputSelect class="form-select" @bind-Value="model.MetodoId">
                        <option value="0">-- Seleccione --</option>
                        @foreach (var m in metodos)
                        {
                            <option value="@m.MetodoId">@m.NombreMetodo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => model.MetodoId)" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" @onclick="@(() => NavManager.NavigateTo("/pagos"))">Cancelar</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private Pago model = new Pago();
    private IEnumerable<MetodoPago> metodos = Enumerable.Empty<MetodoPago>();
    private IEnumerable<Reserva> reservas = Enumerable.Empty<Reserva>();
    private string? errorMessage;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            metodos = await Api.GetFromJsonAsync<IEnumerable<MetodoPago>>("api/metodospago") ?? Enumerable.Empty<MetodoPago>();
            reservas = await Api.GetFromJsonAsync<IEnumerable<Reserva>>("api/reservas") ?? Enumerable.Empty<Reserva>();

            if (Id != 0)
            {
                var existing = await Api.GetFromJsonAsync<Pago>($"api/pagos/{Id}");
                if (existing != null) model = existing;
            }
            else
            {
                model.FechaPago = DateTime.Now;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error cargando datos: {ex.Message}";
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            HttpResponseMessage resp;
            if (Id == 0)
                resp = await Api.PostAsJsonAsync("api/pagos", model);
            else
                resp = await Api.PutAsJsonAsync($"api/pagos/{Id}", model);

            if (resp.IsSuccessStatusCode)
            {
                NavManager.NavigateTo("/pagos");
            }
            else
            {
                var detail = await resp.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Error guardando pago: {resp.StatusCode} - {detail}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error guardando pago: {ex.Message}");
        }
    }

    private Task HandleInvalidSubmit(EditContext context)
    {
        return Task.CompletedTask;
    }
}