@page "/estados-reserva/nuevo"
@page "/estados-reserva/editar/{Id:int}"
@using ReservasCanchas_Web.Models
@using Microsoft.JSInterop
@inject ReservasCanchas_Web.Servicios.Interfaces.IEstadoReservaService EstadoService
@inject IJSRuntime JS
@inject NavigationManager NavManager

<div class="container-fluid px-4">
    <h3 class="mt-4">@((Id == 0) ? "Nuevo estado de reserva" : "Editar estado de reserva")</h3>

    <div class="card mb-4">
        <div class="card-body">
            <EditForm Model="model" FormName="EstadoReservaForm" OnValidSubmit="ManejadorOnGuardar" OnInvalidSubmit="HandleInvalidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Nombre estado</label>
                    <InputText class="form-control" @bind-Value="model.NombreEstado" placeholder="Ingresa el nombre del estado" />
                    <ValidationMessage For="@(() => model.NombreEstado)" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" @onclick="@( () => NavManager.NavigateTo("/estados-reserva"))">Cancelar</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private EstadoReserva model = new EstadoReserva();

    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {
            var existing = await EstadoService.GetByIdAsync(Id);
            if (existing != null) model = existing;
        }
    }

    // Equivalente a ManejadorOnCrearLibro en tu ejemplo
    private async Task ManejadorOnGuardar()
    {
        try
        {
            if (Id == 0)
                await EstadoService.AddAsync(model);
            else
                await EstadoService.UpdateAsync(model);

            NavManager.NavigateTo("/estados-reserva");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error guardando estado: {ex.Message}");
        }
    }

    private Task HandleInvalidSubmit(EditContext context)
    {
        // útil para debug si la validación falla
        return Task.CompletedTask;
    }
}