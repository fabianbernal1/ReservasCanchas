@page "/estados-reserva/nuevo"
@page "/estados-reserva/editar/{Id:int}"
@using System.Net.Http.Json
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<div class="container-fluid px-4">
    <h3 class="mt-4">@((Id == 0) ? "Nuevo estado de reserva" : "Editar estado de reserva")</h3>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <EditForm Model="model" FormName="EstadoReservaForm" OnValidSubmit="ManejadorOnGuardar" OnInvalidSubmit="HandleInvalidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Nombre estado</label>
                    <InputText class="form-control" @bind-Value="model.NombreEstado" placeholder="Ingresa el nombre del estado" />
                    <ValidationMessage For="@(() => model.NombreEstado)" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" @onclick="@( () => NavManager.NavigateTo("/estados-reserva"))">Cancelar</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private EstadoReserva model = new EstadoReserva();
    private string? errorMessage;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (Id != 0)
            {
                var existing = await Api.GetFromJsonAsync<EstadoReserva>($"api/estadosreserva/{Id}");
                if (existing != null) model = existing;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error cargando estado: {ex.Message}";
        }
    }

    // Equivalente a ManejadorOnCrearLibro en tu ejemplo
    private async Task ManejadorOnGuardar()
    {
        try
        {
            HttpResponseMessage resp;
            if (Id == 0)
                resp = await Api.PostAsJsonAsync("api/estadosreserva", model);
            else
                resp = await Api.PutAsJsonAsync($"api/estadosreserva/{Id}", model);

            if (resp.IsSuccessStatusCode)
            {
                NavManager.NavigateTo("/estados-reserva");
            }
            else
            {
                var detail = await resp.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Error guardando estado: {resp.StatusCode} - {detail}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error guardando estado: {ex.Message}");
        }
    }

    private Task HandleInvalidSubmit(EditContext context)
    {
        return Task.CompletedTask;
    }
}