@page "/metodos-pago"
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<h3>Métodos de pago</h3>

<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <div></div>
            <button class="btn btn-primary" @onclick="Crear">Nuevo</button>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th style="width:160px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (items is null)
                {
                    <tr><td colspan="3">Cargando...</td></tr>
                }
                else if (!items.Any())
                {
                    <tr><td colspan="3">No hay registros.</td></tr>
                }
                else
                {
                    @foreach (var m in items)
                    {
                        <tr>
                            <td>@m.MetodoId</td>
                            <td>@m.NombreMetodo</td>
                            <td>
                                <button class="btn btn-sm btn-secondary me-2" @onclick="() => Editar(m.MetodoId)">Editar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(m.MetodoId)">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private IEnumerable<MetodoPago>? items;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        try
        {
            items = await Api.GetFromJsonAsync<IEnumerable<MetodoPago>>("api/metodospago") ?? Enumerable.Empty<MetodoPago>();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
            items = Enumerable.Empty<MetodoPago>();
        }
    }

    private void Crear() => NavManager.NavigateTo("/metodospago/nuevo");
    private void Editar(int id) => NavManager.NavigateTo($"/metodospago/editar/{id}");

    private async Task ConfirmDelete(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar este método?"))
        {
            var resp = await Api.DeleteAsync($"api/metodospago/{id}");
            if (resp.IsSuccessStatusCode)
            {
                await Load();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Error al eliminar. Revisa el servidor.");
            }
        }
    }
}