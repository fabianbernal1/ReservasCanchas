@page "/usuarios"
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<h3>Usuarios</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" aria-label="Close" @onclick="DismissError"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <div></div>
            <button class="btn btn-primary" @onclick="Crear">Nuevo</button>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Primer apellido</th>
                    <th>Segundo apellido</th>
                    <th>Cédula</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th style="width:160px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (items is null)
                {
                    <tr><td colspan="8">Cargando...</td></tr>
                }
                else if (!items.Any())
                {
                    <tr><td colspan="8">No hay registros.</td></tr>
                }
                else
                {
                    @foreach (var u in items)
                    {
                        <tr>
                            <td>@u.UsuarioId</td>
                            <td>@u.Nombre</td>
                            <td>@u.PrimerApellido</td>
                            <td>@u.SegundoApellido</td>
                            <td>@u.Cedula</td>
                            <td>@u.Correo</td>
                            <td>@u.Telefono</td>
                            <td>
                                <button class="btn btn-sm btn-secondary me-2" @onclick="() => Editar(u.UsuarioId)">Editar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(u.UsuarioId)">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private IEnumerable<Usuario>? items;
    private string? errorMessage;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        try
        {
            items = await Api.GetFromJsonAsync<IEnumerable<Usuario>>("api/usuarios") ?? Enumerable.Empty<Usuario>();
        }
        catch (Exception ex)
        {
            // Evitar JS interop durante prerendering: mostrar el error en la UI en lugar de llamar a JS aquí.
            errorMessage = $"Error al cargar usuarios: {ex.Message}";
            items = Enumerable.Empty<Usuario>();
        }
    }

    private void Crear() => NavManager.NavigateTo("/usuarios/nuevo");
    private void Editar(int id) => NavManager.NavigateTo($"/usuarios/editar/{id}");

    private async Task ConfirmDelete(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar este usuario?"))
        {
            var resp = await Api.DeleteAsync($"api/usuarios/{id}");
            if (resp.IsSuccessStatusCode)
            {
                await Load();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Error al eliminar. Revisa el servidor.");
            }
        }
    }

    private void DismissError() => errorMessage = null;
}