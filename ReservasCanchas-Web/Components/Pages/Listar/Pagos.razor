@page "/pagos"
@using ReservasCanchas_Web.Models
@inject ReservasCanchas_Web.Servicios.Interfaces.IPagoService PagoService
@inject ReservasCanchas_Web.Servicios.Interfaces.IMetodoPagoService MetodoService
@inject IJSRuntime JS
@inject NavigationManager NavManager

<h3>Pagos</h3>

<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <div></div>
            <button type="button" class="btn btn-primary" @onclick="Crear">Nuevo</button>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Reserva</th>
                    <th>Monto</th>
                    <th>Fecha pago</th>
                    <th>Método</th>
                    <th style="width:160px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (items is null)
                {
                    <tr><td colspan="6">Cargando...</td></tr>
                }
                else if (!items.Any())
                {
                    <tr><td colspan="6">No hay registros.</td></tr>
                }
                else
                {
                    @foreach (var p in items)
                    {
                        <tr>
                            <td>@p.PagoId</td>
                            <td>@p.ReservaId</td>
                            <td>@p.Monto.ToString("F2")</td>
                            <td>@p.FechaPago.ToString("g")</td>
                            <td>@(metodoMap.TryGetValue(p.MetodoId, out var nombre) ? nombre : "—")</td>
                            <td>
                                <button class="btn btn-sm btn-secondary me-2" @onclick="() => Editar(p.PagoId)">Editar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(p.PagoId)">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private IEnumerable<Pago>? items;
    private Dictionary<int, string> metodoMap = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        items = await PagoService.GetAllAsync();

        var metodos = await MetodoService.GetAllAsync();
        metodoMap = metodos.ToDictionary(m => m.MetodoId, m => m.NombreMetodo);
    }

    private void Crear() => NavManager.NavigateTo("/pagos/nuevo");
    private void Editar(int id) => NavManager.NavigateTo($"/pagos/editar/{id}");

    private async Task ConfirmDelete(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar este pago?"))
        {
            await PagoService.DeleteAsync(id);
            await LoadDataAsync();
        }
    }
}