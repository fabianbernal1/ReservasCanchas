@page "/pagos"
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<h3>Pagos</h3>

<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <div></div>
            <button class="btn btn-primary" @onclick="Crear">Nuevo</button>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Reserva</th>
                    <th>Monto</th>
                    <th>Fecha pago</th>
                    <th>Método</th>
                    <th style="width:160px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (items is null)
                {
                    <tr><td colspan="6">Cargando...</td></tr>
                }
                else if (!items.Any())
                {
                    <tr><td colspan="6">No hay registros.</td></tr>
                }
                else
                {
                    @foreach (var p in items)
                    {
                        <tr>
                            <td>@p.PagoId</td>
                            <td>@(p.Reserva?.ReservaId.ToString() ?? p.ReservaId.ToString())</td>
                            <td>@p.Monto.ToString("C")</td>
                            <td>@p.FechaPago.ToString("g")</td>
                            <td>@p.MetodoPago?.NombreMetodo</td>
                            <td>
                                <button class="btn btn-sm btn-secondary me-2" @onclick="() => Editar(p.PagoId)">Editar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(p.PagoId)">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private IEnumerable<Pago>? items;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        try
        {
            items = await Api.GetFromJsonAsync<IEnumerable<Pago>>("api/pagos") ?? Enumerable.Empty<Pago>();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
            items = Enumerable.Empty<Pago>();
        }
    }

    private void Crear() => NavManager.NavigateTo("/pagos/nuevo");
    private void Editar(int id) => NavManager.NavigateTo($"/pagos/editar/{id}");

    private async Task ConfirmDelete(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar este pago?"))
        {
            var resp = await Api.DeleteAsync($"api/pagos/{id}");
            if (resp.IsSuccessStatusCode)
            {
                await Load();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Error al eliminar. Revisa el servidor.");
            }
        }
    }
}