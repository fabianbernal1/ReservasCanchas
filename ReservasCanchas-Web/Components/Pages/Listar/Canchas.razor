@page "/canchas"
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<h3>Canchas</h3>

<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <div>
                <!-- Botones de descarga de reportes -->
                <div class="btn-group me-2" role="group" aria-label="Reportes">
                    <a class="btn btn-outline-secondary" href="api/reports/reservas/por-cancha/pdf" target="_blank" rel="noopener">PDF</a>
                    <a class="btn btn-outline-secondary" href="api/reports/reservas/por-cancha/excel" target="_blank" rel="noopener">Excel</a>
                    <a class="btn btn-outline-secondary" href="api/reports/reservas/por-cancha/word" target="_blank" rel="noopener">Word</a>
                </div>
            </div>
            <button class="btn btn-primary" @onclick="Crear">Nuevo</button>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Ubicación</th>
                    <th>Tipo</th>
                    <th>Precio/hora</th>
                    <th style="width:160px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (items is null)
                {
                    <tr><td colspan="6">Cargando...</td></tr>
                }
                else if (!items.Any())
                {
                    <tr><td colspan="6">No hay registros.</td></tr>
                }
                else
                {
                    @foreach (var c in items)
                    {
                        <tr>
                            <td>@c.CanchaId</td>
                            <td>@c.Nombre</td>
                            <td>@c.Ubicacion</td>
                            <td>@c.Tipo</td>
                            <td>@c.PrecioHora.ToString("C")</td>
                            <td>
                                <button class="btn btn-sm btn-secondary me-2" @onclick="() => Editar(c.CanchaId)">Editar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(c.CanchaId)">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private IEnumerable<Cancha>? items;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        try
        {
            items = await Api.GetFromJsonAsync<IEnumerable<Cancha>>("api/canchas") ?? Enumerable.Empty<Cancha>();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error cargando canchas: {ex.Message}");
            items = Enumerable.Empty<Cancha>();
        }
    }

    private void Crear() => NavManager.NavigateTo("/canchas/nuevo");
    private void Editar(int id) => NavManager.NavigateTo($"/canchas/editar/{id}");

    private async Task ConfirmDelete(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar esta cancha?"))
        {
            var resp = await Api.DeleteAsync($"api/canchas/{id}");
            if (resp.IsSuccessStatusCode)
            {
                await Load();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Error al eliminar. Revisa el servidor.");
            }
        }
    }
}