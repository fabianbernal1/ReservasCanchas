@page "/reservas"
@using ReservasCanchas_Web.Models
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<h3>Reservas</h3>

<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <div></div>
            <button class="btn btn-primary" @onclick="Crear">Nuevo</button>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Cancha</th>
                    <th>Fecha</th>
                    <th>Hora inicio</th>
                    <th>Hora fin</th>
                    <th>Estado</th>
                    <th style="width:160px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (items is null)
                {
                    <tr><td colspan="8">Cargando...</td></tr>
                }
                else if (!items.Any())
                {
                    <tr><td colspan="8">No hay registros.</td></tr>
                }
                else
                {
                    @foreach (var r in items)
                    {
                        <tr>
                            <td>@r.ReservaId</td>
                            <td>@(r.Usuario?.Nombre ?? r.UsuarioId.ToString())</td>
                            <td>@(r.Cancha?.Nombre ?? r.CanchaId.ToString())</td>
                            <td>@r.FechaReserva.ToShortDateString()</td>
                            <td>@r.HoraInicio</td>
                            <td>@r.HoraFin</td>
                            <td>@r.Estado?.NombreEstado</td>
                            <td>
                                <button class="btn btn-sm btn-secondary me-2" @onclick="() => Editar(r.ReservaId)">Editar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(r.ReservaId)">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private IEnumerable<Reserva>? items;
    private HttpClient Api => HttpFactory.CreateClient("ApiClient");

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        try
        {
            items = await Api.GetFromJsonAsync<IEnumerable<Reserva>>("api/reservas") ?? Enumerable.Empty<Reserva>();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
            items = Enumerable.Empty<Reserva>();
        }
    }

    private void Crear() => NavManager.NavigateTo("/reservas/nuevo");
    private void Editar(int id) => NavManager.NavigateTo($"/reservas/editar/{id}");

    private async Task ConfirmDelete(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar esta reserva?"))
        {
            var resp = await Api.DeleteAsync($"api/reservas/{id}");
            if (resp.IsSuccessStatusCode)
            {
                await Load();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Error al eliminar. Revisa el servidor.");
            }
        }
    }
}